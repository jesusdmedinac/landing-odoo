        callToAction: {
          target: '_blank',
          text: 'Agendar demo',
          href: 'https://wa.me/526645142608',
        },
      },
      {
        title: 'Estándar',
        subtitle: 'Mejor precio para cafeterías medianas',
        price: 1000,
