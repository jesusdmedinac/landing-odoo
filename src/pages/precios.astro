        title: 'Básico',
        subtitle: 'Mejor precio para pequeñas cafeterías',
        price: 500,
        period: 'por usuario al mes',
        items: [
          {
            description: 'Sitio web',
          },
          {
            description: 'Ventas',
          },
          {
            description: 'Finanzas',
